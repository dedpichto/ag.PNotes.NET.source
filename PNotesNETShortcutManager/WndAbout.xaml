<Window x:Class="PNotesNETShortcutManager.WndAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WndAbout" Height="300" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Style="{DynamicResource CustomWindowStyle}" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Stretch="None" HorizontalAlignment="Center" Source="main.png" Margin="8"/>
        <TextBlock Name="tbAbout" Grid.Row="1" TextWrapping="Wrap" TextAlignment="Center" Margin="8"/>
        <Button Content="OK" MinWidth="75" MaxWidth="75" Grid.Row="2" HorizontalAlignment="Center" IsDefault="True" IsCancel="True" Margin="8"/>
    </Grid>
</Window>
